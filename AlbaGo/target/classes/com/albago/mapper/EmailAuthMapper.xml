	<insert id="create">
		insert into emailauth (u_email, a_code) values (#{u_email}, #{a_code})
	</insert>
	
	<select id="match" resultType="int">
		select count(*) from emailauth where u_email=#{u_email} and a_code=#{a_code} and
		<![CDATA[
		a_date >= sysdate - (interval '3' minute)
		]]>
	</select>

